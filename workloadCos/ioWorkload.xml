  <workflow>

<!-- 
Three Phases:
1) No failures 
2) Single OSD_device failure 
3) Simulate loss of OSD node by dropping a network interface
-->

<!-- Use object counts and object sizes as defined in vars.shinc -->
<!-- Operation mix is: 60% write, 40% delete
     -->

    <workstage name="no_failure" closuredelay="">
        <work name="writeDelete1" workers="96" runtime="" >
            <operation name="writeOP" type="write" ratio="60" config="containers=c(1);objects=s(1001,10000);sizes=c(4)MB" />
	    <operation name="deleteOP" type="delete" ratio="40" config="containers=c(1);objects=s(1,10000)" />
        </work>
    </workstage>


    <workstage name="osd_failure" closuredelay="">
        <work name="writeDelete2" workers="96" runtime="" >
            <operation name="writeOP" type="write" ratio="60" config="containers=c(2);objects=s(1001,10000);sizes=c(4)MB" />
	    <operation name="deleteOP" type="delete" ratio="40" config="containers=c(2);objects=s(1,10000)" />
        </work>
    </workstage>


    <workstage name="node_failure" closuredelay="">
        <work name="writeDelete3" workers="96" runtime="" >
             <operation name="writeOP" type="write" ratio="60" config="containers=c(3);objects=s(1001,10000);sizes=c(4)MB" />
	    <operation name="deleteOP" type="delete" ratio="40" config="containers=c(3);objects=s(1,10000)" />
        </work>
    </workstage>

  </workflow>

</workload>
